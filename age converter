while(1):
    kor_age = int(input("한국 나이를 입력하세요:(숫자만입력)"))
    if kor_age>0:
        birth = int(input("생일이 지났습니까? 맞으면 0, 아니면 -1:"))
        if birth not in (0,-1):
            print("잘못입력했습니다.")
            continue
        else:
            ame_age = kor_age+birth-1
            print(f"당신의 미국 나이는 {ame_age}살입니다.")
        break
    elif kor_age <=0:
      print("한국나이는 1살부터 시작합니다.")
      continue
